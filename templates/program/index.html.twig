{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1 style="border-bottom: 1px solid black; padding-bottom: 5px">Toutes les séries de la table program :</h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}s</h2>
            <p>{{ program.summary }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Show</a>
            <a href="{{ path("program_edit", { id: program.id }) }}">Edit</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <p><a href="{{ path("program_new")}}">Create New</a></p>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}

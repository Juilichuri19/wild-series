{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <h2>Catégorie : {{ program.category.name }}</h2>
        </div>
    </div>

    <h2 style="text-decoration: underline">Liste des seasons</h2>
    {% for season in program.seasons %}
        <h2  style="padding-left: 20px"><a href="{{ path('program_season_show', { program: program.id , season: season.id}) }}">{{ season.description }}</a></h2>
    {% endfor %}
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}

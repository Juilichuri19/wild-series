{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        #formDv form div{
            margin: 10px;
        }
        #formDv form div label{padding: 10px}
    </style>
{% endblock %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div id="formDv" style="text-align: center;">
        {{ form_start(form) }}
        <h1>Register</h1>
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Register') }}</button>
        {{ form_end(form) }}
        <div style="margin-top: 10px">
            <span>Already Have Account <a href="{{ path('login') }}">Login Here!</a> </span>
        </div>
    </div>
{% endblock %}

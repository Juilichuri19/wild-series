{% extends 'base.html.twig' %}

{% block title %}Actor page{% endblock %}

{% block body %}

    <h3>Acteur : {{ actor.name }}</h3>
    <strong style="text-decoration: underline">Liste des programs:</strong>
    <ul>
        {% for program in actor.programs  %}
            <li><a href="{{ path("program_show", { slug: program.slug }) }}">{{ program.title }}</a></li>
        {% else %}
            <li>Aucun série pour cette acteur</li>
        {% endfor %}
    </ul>
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}
